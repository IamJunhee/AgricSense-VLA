<?xml version="1.0"?>
<sdf version="1.7" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:arg name="is_sim" default="true"/>
  <xacro:arg name="prefix" default=""/>
  <xacro:arg name="zed_mount_path" default="zed_mount.sdf"/>
  <xacro:arg name="plugin_path" default="jackal_ignition_plugins.sdf"/>


  <model name="jackal">
    <static>false</static>

    <!-- Base Link -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>16.523</mass>
        <pose>0.012 0.002 0.067 0 0 0</pose>
        <inertia>
          <ixx>0.3136</ixx>
          <iyy>0.3922</iyy>
          <izz>0.4485</izz>
          <ixy>-0.0008</ixy>
          <ixz>0.0164</ixz>
          <iyz>-0.0009</iyz>
        </inertia>
      </inertial>
      <visual name="chassis_visual">
        <geometry>
          <mesh uri="model://jackal_description/meshes/jackal-base.stl"/>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.42 0.31 0.184</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Example wheel link: front_left -->
    <link name="front_left_wheel_link">
      <pose>0.131 0.187795 0.0345 0 0 0</pose>
      <inertial>
        <mass>0.477</mass>
        <inertia>
          <ixx>0.0013</ixx>
          <iyy>0.0024</iyy>
          <izz>0.0013</izz>
        </inertia>
      </inertial>
      <visual name="fl_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.098</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="fl_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.098</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Wheel Joint Example -->
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_left_wheel_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Repeat for other wheels (front_right, rear_left, rear_right) -->

    <!-- Add other links: imu_link, navsat_link, mounts etc. -->

    <!-- Xacro includes for ZED and plugins -->
    <xacro:include filename="$(arg zed_mount_path)"/>
    <xacro:include filename="$(arg plugin_path)"/>
  </model>
</sdf>